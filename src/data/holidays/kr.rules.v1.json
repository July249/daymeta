    {
      "id": "KR_CHRISTMAS",
      "kind": "STATUTORY",
      "names": { "ko": "크리스마스", "en": "Christmas Day" },
      "rule": { "type": "fixed_solar", "month": 12, "day": 25 }
    }
  ]
